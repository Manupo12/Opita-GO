<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.OpitaGO" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/opita_yellow_primary</item>
        <item name="colorPrimaryVariant">@color/opita_yellow_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorSecondary">@color/opita_blue_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:colorBackground">@color/background_main</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

    </style>

    <style name="Theme.OpitaGO" parent="Base.Theme.OpitaGO" />

    <style name="FilterChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_filter_chip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>